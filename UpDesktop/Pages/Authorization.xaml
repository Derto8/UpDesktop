<Page x:Class="UpDesktop.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UpDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="Gray">
        <Label Content="Авторизация" Foreground="White" FontSize="26" Height="64" VerticalAlignment="Top" HorizontalAlignment="Left" Width="280" Margin="36,10,0,0"/>

        <TextBox x:Name="login" Margin="261,119,261,0" Height="42" VerticalAlignment="Top"/>
        <TextBox x:Name="password" Margin="261,183,261,0" Height="42" VerticalAlignment="Top"/>
        <Button Margin="324,254,324,0" Click="Auth" Height="42" VerticalAlignment="Top" Content="Войти" Background="White" FontSize="16" />
    </Grid>
</Page>
